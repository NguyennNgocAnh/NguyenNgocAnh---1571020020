@model List<Website.Model.Entities.News>
@{
    ViewData["Title"] = "Quản lý tin tức";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/admin/news.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<div class="main-panel px-3 py-2">
    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title m-0">QUẢN LÝ TIN TỨC</h5>
                <a href="/Administrator/News/Create" class="btn-add-news">
                    <i class="fas fa-plus-circle"></i> Thêm mới
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle text-center">
                    <thead class="table-header">
                        <tr>
                            <th>STT</th>
                            <th>Tiêu đề</th>
                            <th>Nội dung</th>
                            <th>Ngày đăng</th>
                            <th>Ảnh</th>
                            <th>Danh mục</th>
                            <th>Người đăng</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NewsId</td>
                                <td>@item.Title</td>
                                <td>
                                    <span class="truncate-text" title="@item.Content">@item.Content</span>
                                </td>
                                <td>@(item.PublishDate.HasValue ? item.PublishDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                <td>
                                    <img src="~/img/news/@item.Image1" class="news-thumbnail" />
                                </td>
                                <td>@item.CategoryId</td>
                                <td>@item.UserId</td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/Administrator/News/Edit/@item.NewsId" class="btn btn-sm me-1 btn-custom-edit" title="Chỉnh sửa">
                                            <i class="fa-solid fa-edit"></i>
                                        </a>
                                        <a href="/Administrator/News/Delete/@item.NewsId" onclick="return confirm('Bạn có chắc là muốn xóa không?');" class="btn btn-sm btn-custom-delete" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

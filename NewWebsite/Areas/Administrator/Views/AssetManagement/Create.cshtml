@model Website.Model.Entities.AssetManagement
@{
    ViewData["Title"] = "Thêm tài sản";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/admin/news.css" asp-append-version="true" />

<div class="main-panel px-3 py-2">
    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <h5 class="card-title mb-3">THÊM MỚI TÀI SẢN</h5>

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="AssetCode" class="form-label">Mã tài sản</label>
                    <input asp-for="AssetCode" class="form-control" />
                    <span asp-validation-for="AssetCode" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AssetName" class="form-label">Tên tài sản</label>
                    <input asp-for="AssetName" class="form-control" />
                    <span asp-validation-for="AssetName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Action" class="form-label">Hành động</label>
                    <select asp-for="Action" class="form-select">
                        <option value="">-- Chọn hành động --</option>
                        <option>Mua</option>
                        <option>Bán</option>
                    </select>
                    <span asp-validation-for="Action" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Số lượng</label>
                    <input asp-for="Quantity" type="number" class="form-control" min="0" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BuyPrice" class="form-label">Giá mua</label>
                    <input asp-for="BuyPrice" type="number" step="0.01" class="form-control" min="0" />
                    <span asp-validation-for="BuyPrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SellPrice" class="form-label">Giá bán</label>
                    <input asp-for="SellPrice" type="number" step="0.01" class="form-control" min="0" />
                    <span asp-validation-for="SellPrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ActionDate" class="form-label">Ngày thực hiện</label>
                    <input asp-for="ActionDate" type="date" class="form-control" />
                    <span asp-validation-for="ActionDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CustomerId" class="form-label">Mã khách hàng</label>
                    <input asp-for="CustomerId" type="number" class="form-control" min="0" />
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StockId" class="form-label">Mã chứng khoán</label>
                    <input asp-for="StockId" type="number" class="form-control" min="0" />
                    <span asp-validation-for="StockId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-add-news">
                    <i class="fas fa-save"></i> Lưu lại
                </button>
                <a href="/Administrator/AssetManagement/Index" class="btn btn-secondary ms-2">Hủy</a>
            </form>
        </div>
    </div>
</div>

@model List<Website.Model.Entities.Event>
@{
    ViewData["Title"] = "Quản lý Sự Kiện";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/admin/news.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<div class="main-panel px-3 py-2">
    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title m-0">QUẢN LÝ SỰ KIỆN</h5>
                <a href="/Administrator/Event/Create" class="btn-add-news">
                    <i class="fas fa-plus-circle"></i> Thêm mới
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle text-center">
                    <thead class="table-header">
                        <tr>
                            <th>STT</th>
                            <th>Tên sự kiện</th>
                            <th>Mô tả</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.EventId</td>
                                <td>@item.EventName</td>
                                <td>
                                    <span class="truncate-text" title="@item.Description">@item.Description</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/Administrator/Event/Edit/@item.EventId" class="btn btn-sm me-1 btn-custom-edit" title="Chỉnh sửa">
                                            <i class="fa-solid fa-edit"></i>
                                        </a>
                                        <a href="/Administrator/Event/Delete/@item.EventId" onclick="return confirm('Bạn có chắc là muốn xóa không?');" class="btn btn-sm btn-custom-delete" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

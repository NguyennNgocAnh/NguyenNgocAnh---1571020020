@model Website.Model.Entities.User

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<head>
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
</head>
<h2>Thông tin cá nhân</h2>

<form asp-action="UpdateProfile" asp-controller="User" method="post" enctype="multipart/form-data">
    <table class="table table-bordered">
        <tr>
            <th>Username</th>
            <td>
                <input type="text" name="Username" class="form-control" value="@Model.Username" />
            </td>
        </tr>
        <tr>
            <th>Email</th>
            <td>
                <input type="email" name="Email" class="form-control" value="@Model.Email" />
            </td>
        </tr>
        <tr>
            <th>Vai trò</th>
            <td>
                <input type="text" class="form-control" value="@Model.UserRole" readonly />
            </td>
        </tr>
        <tr>
            <th>Avatar</th>
            <td>
                @if (!string.IsNullOrEmpty(Model.Avatar))
                {
                    <img src="@Url.Content(Model.Avatar)" width="100" height="100" />

                    <br />
                }
                <input type="file" name="AvatarFile" class="form-control mt-2" />
            </td>
        </tr>
    </table>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>

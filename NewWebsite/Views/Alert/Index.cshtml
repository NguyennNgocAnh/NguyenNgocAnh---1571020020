@model Website.Model.Entities.Alert

@{
    ViewData["Title"] = "Tạo cảnh báo giá";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="AlertName"></label>
        <input asp-for="AlertName" class="form-control" />
        <span asp-validation-for="AlertName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Cổ phiếu</label>
        <select asp-for="StockId" class="form-control" asp-items="@(new SelectList(ViewBag.Stocks, "StockId", "StockName"))">
            <option value="">-- Chọn cổ phiếu --</option>
        </select>
        <span asp-validation-for="StockId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PriceThresholdUp"></label>
        <input asp-for="PriceThresholdUp" class="form-control" placeholder="Giá vượt ngưỡng trên" />
        <span asp-validation-for="PriceThresholdUp" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PriceThresholdDown"></label>
        <input asp-for="PriceThresholdDown" class="form-control" placeholder="Giá vượt ngưỡng dưới" />
        <span asp-validation-for="PriceThresholdDown" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PercentChange"></label>
        <input asp-for="PercentChange" class="form-control" placeholder="Phần trăm thay đổi" />
        <span asp-validation-for="PercentChange" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VolumeThreshold"></label>
        <input asp-for="VolumeThreshold" class="form-control" placeholder="Khối lượng vượt ngưỡng" />
        <span asp-validation-for="VolumeThreshold" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu cảnh báo</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

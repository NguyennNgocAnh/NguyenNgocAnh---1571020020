@model Website.Model.Entities.AssetManagement
@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/css/asset.css" />
</head>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="custom-form-card">
                <div class="card-header">Sửa tài sản</div>
                <div class="card-body">
                    <form method="post" asp-controller="AssetManagement" asp-action="Edit" class="row g-3">
                        <input type="hidden" asp-for="AssetId" />
                        <div class="col-12">
                            <label asp-for="AssetCode" class="form-label"></label>
                            <input asp-for="AssetCode" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label asp-for="AssetName" class="form-label"></label>
                            <input asp-for="AssetName" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label asp-for="Action" class="form-label"></label>
                            <input asp-for="Action" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label asp-for="BuyPrice" class="form-label"></label>
                            <input asp-for="BuyPrice" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label asp-for="SellPrice" class="form-label"></label>
                            <input asp-for="SellPrice" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label asp-for="ActionDate" class="form-label"></label>
                            <input asp-for="ActionDate" class="form-control" />
                        </div>
                        <div class="col-12 text-center mt-3">
                            <button type="submit" class="btn btn-primary px-4">Cập nhật</button>
                            <button type="reset" class="btn btn-outline-secondary ms-2 px-4" onclick="window.history.back();">Hủy</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
